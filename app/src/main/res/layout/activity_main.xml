<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="by.dzmitry_lakisau.hw03.MainActivity"
    android:background="@color/light_red"
    >

        <EditText
            android:id="@+id/track"
            android:layout_width="364dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="@string/track_hint"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:textColorHint="@color/dark_red"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="67dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <EditText
            android:id="@+id/artist"
            android:layout_width="364dp"
            android:layout_height="48dp"
            android:layout_alignLeft="@+id/track"
            android:layout_alignParentTop="false"
            android:layout_alignRight="@+id/track"
            android:layout_below="@+id/track"
            android:ems="10"
            android:hint="@string/artist_hint"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:textColorHint="@color/dark_red"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/track"
            android:layout_marginLeft="-4dp"
            app:layout_constraintLeft_toLeftOf="@+id/track"/>


        <EditText
            android:id="@+id/album"
            android:layout_width="367dp"
            android:layout_height="49dp"
            android:layout_alignLeft="@+id/track"
            android:layout_alignRight="@+id/track"
            android:layout_below="@+id/artist"
            android:hint="@string/album_hint"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:textColorHint="@color/dark_red"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/button_scrobble"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/artist"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.571"/>

        <Button
            android:id="@+id/button_scrobble"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/album"
            android:background="@color/dark_red"
            android:text="@string/button_scrobble"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/album"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>
